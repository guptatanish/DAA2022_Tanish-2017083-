//W.A.P to implement insertion sorting and total no of comparision
#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cout<<"Enter the number of element in an array: "<<endl;
    cin>>n;
    int arr[n];
    for(int i = 0 ; i<n;i++)
     cin>>arr[i];
 
    int x,count=0;
     for(int i = 0 ; i<n;i++)
     {
         int x = arr[i];
         int j = i-1;
         while(j>=0 && arr[j]>x)
         {
             count++;
             arr[j+1] = arr[j];
             j--;
         }
         arr[j+1] = x;
     }
     for(int i = 0 ; i<n ; i++)
       cout<<arr[i]<<" ";
       cout<<endl;
       
       cout<<"Number of comparision is: "<<count<<endl;
}
