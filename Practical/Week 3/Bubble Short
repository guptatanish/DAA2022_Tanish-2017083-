#include<stdio.h>
#include<stdlib.h>

int bubble_sort(int *a,int n)
{
    int comp=0;
    for(int i=0;i<n-1;i++)
    {
        for(int j=0;j<n-i-1;j++)
        {
            comp++;
            if(a[j]>a[j+1])
            {
                int temp=a[j];
                a[j]=a[j+1];
                a[j+1]=temp;
            }
        }
    }
    return comp;
}
int main()
{
    int a[100];
    int n;
    printf("Enter the total number of elements : ");
    scanf("%d",&n);
    printf("Enter the array elements : ");
    for(int i=0;i<n;i++)
        scanf("%d",&a[i]);
    int comparision=bubble_sort(a,n);
    printf("Total no. of comparisions are : %d",comparision);
    printf("\nSorted array is : ");
    for(int i=0;i<n;i++)
        printf("%d ",a[i]);
}
